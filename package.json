    "@lavaclient/queue": "^2.1.1",
    "@lavaclient/spotify": "^3.1.0",
    "canvacord": "^5.4.8",
    "discord.js": "^14.6.0",
    "dotenv": "^16.0.3",
    "lavaclient": "^4.1.1",
    "mongoose": "^8.8.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.28.0",
    "prettier": "^2.8.0"
